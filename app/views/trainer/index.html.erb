<h1 class="title has-text-centered">Select correct translation</h1>

<div class="columns">
  <div class="column is-one-quarter is-offset-one-quarter" style="display: flex; flex-flow: column; justify-content: center;">
    <h2 class="is-size-3">Word:&nbsp;<span class="has-text-weight-bold"><%= @word.en %></span></h2>
    <p>Popularity: <%= @word.popularity %></p>
  </div>
  <div class="column is-one-quarter">
    <div class="menu">
      <p class="menu-label">
        Answers
      </p>
      <ul class="menu-list">
        <% @answers.each do |answer| %>
          <li><%= link_to answer[:ru], trainer_check_path(word_id: @word.id, answer_id: answer[:id]) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
