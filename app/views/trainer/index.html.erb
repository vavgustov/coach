<h1 class="title has-text-centered">Select correct translation</h1>

<div class="columns">
  <div class="column is-one-quarter is-offset-one-quarter is-size-3" style="display: flex; align-items: center">
    Word:&nbsp;<span class="has-text-weight-bold"><%= @word.en %></span>
  </div>
  <div class="column is-one-quarter">
    <div class="menu">
      <p class="menu-label">
        Answers
      </p>
      <ul class="menu-list">
        <% @answers.each do |answer| %>
          <li><%= link_to answer[:ru], trainer_check_path(word_id: @word.id, answer_id: answer[:id]) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
